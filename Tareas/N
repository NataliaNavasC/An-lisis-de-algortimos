
rm(list=ls())
   Fx <- function(x) exp(x) - x*pi

   biseccion <- function(a,b) 
   {

   x<-seq(a,b,0.01)
   plot(x,Fx(x),type="l",col="red")
   abline(h=0,col="blue")

   x <- (a+b)/2
   i <- 0

   while (Fx(x) != 0 ) 
   {   

        error<-abs(a-b)/2

        if(error >= 1.e-8)
           if (Fx(x)*Fx(a) < 0) b <- x 
           else {a <- x}
        else {break}  

        x<-(a+b)/2

        text(x,0,i,cex=0.8,col="blue")


        i<-i+1

        cat("I=",i,"\tX=",x,"\tE=",error,"\n")

   }

   }
   biseccion(-3,1)
